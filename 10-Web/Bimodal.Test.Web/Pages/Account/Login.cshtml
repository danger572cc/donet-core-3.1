@page
@model Account.Login
@{
    ViewData["Title"] = "Login";
}

<section class="jumbotron jumbotron-fluid jumbotron-login">
    <article class="container">
        <h1 class="display-4 register-greetings h1-responsive">Login</h1>
        <hr class="my-4">
        <p class="lead register-heading">Welcome to Travel Experts, Login to continue</p>
    </article>
</section>

<main>
    <section class="container">
        <article class="register-main">
            <section class="register-box">
                <article class="row">
                    <div class="col-md-8 offset-md-2">
                        <br />
                        <form method="post" class="form-signin" asp-page="login">
                            @if (Model.TempData["ErrorMessage"] != null && !string.IsNullOrEmpty(string.Empty + Model.TempData["ErrorMessage"]))
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @Model.TempData["ErrorMessage"].ToString()
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }
                            <h1 class="h3 mb-3 font-weight-normal text-center">Please log in</h1>
                            <div class="form-group">

                                <label for="inputEmail" class="sr-only">Username</label>
                                <input type="text" asp-for="LoginModel.UserName" id="inputEmail" class="form-control" placeholder="Username" required autofocus>
                                <span asp-validation-for="LoginModel.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword" class="sr-only">Password</label>
                                <input type="password" asp-for="LoginModel.Password" id="inputPassword" class="form-control" placeholder="Password" required>
                                <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
                            </div>
                            <button class="btn btn btn-outline-primary btn-block" type="submit">Log In</button>
                        </form>
                    </div>
                </article>
            </section>
        </article>
    </section>
</main>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}